# API 访问令牌
API_KEY=your_api_key_here

# 服务器配置
PORT=6008

# 模型配置
MODEL_PATH=./models/bge-m3
DEVICE=cuda  # 或 cpu
TARGET_DIM=2560  # 目标嵌入维度

# 并发控制
MAX_CONCURRENT_REQUESTS=10      # 最大并发请求数
MAX_BATCH_SIZE=32              # 最大批处理大小
BATCH_TIMEOUT=0.1              # 批处理超时时间(秒)
MAX_QUEUE_SIZE=100             # 最大队列长度
THREAD_POOL_SIZE=4             # 线程池大小

# 速率限制
RATE_LIMIT_REQUESTS=100        # 每个IP每分钟最大请求数
RATE_LIMIT_WINDOW=60           # 速率限制时间窗口(秒)

# 低端设备（如 4 核 CPU）
#THREAD_POOL_SIZE=4

# 中端设备（如 8 核 CPU 或 基础 GPU）
THREAD_POOL_SIZE=8

# 高端 GPU 服务器
#THREAD_POOL_SIZE=32-64

# 超大规模部署（多 GPU）
#THREAD_POOL_SIZE=128-256
